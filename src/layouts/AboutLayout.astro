---
import { SITE } from "@/config";
import Layout from "./Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { Image } from "astro:assets";
// Asegúrate de que esta ruta a la imagen sea correcta
import headerImg from "../assets/images/github-header-banner.png";

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;

// 1. TUS LINKS PRINCIPALES (Botones Grandes)
const mainLinks = [
  {
    name: "GitHub",
    url: "https://github.com/eduardomv2",
    icon: "github",
    subtitle: "@eduardomv2" 
  },
  {
    name: "Blog",
    url: "/",
    icon: "blog",
    subtitle: "Artículos y tutoriales"
  },
  {
    name: "YouTube",
    url: "https://www.youtube.com/@eduardoalejandromartinezvi5461",
    icon: "youtube",
    subtitle: "Videos y Tech"
  },
  {
    name: "Twitch",
    url: "https://twitch.tv/eduardom_v2",
    icon: "twitch",
    subtitle: "Juegos y Proyectos"
  },
];

// 2. TUS LINKS SECUNDARIOS / CONTACTO (Solo Iconos)
const contactLinks = [
  {
    name: "Email",
    url: "mailto:eduardoalejandro.v.mtz@gmail.com", 
    icon: "mail"
  },
  {
    name: "LinkedIn",
    url: "https://linkedin.com/in/eduardoalejandromv", 
    icon: "linkedin"
  },
  {
    name: "X (Twitter)",
    url: "https://x.com/Eduardo78508260", 
    icon: "x"
  },
  {
    name: "Instagram",
    url: "https://www.instagram.com/eduardom_v?igsh=MTZ6dnFmM3ptamp4Ng==",
    icon: "instagram"
  },
  {
    name: "Spotify",
    url: "https://open.spotify.com/playlist/1AKMQDN5DZZlsTncILydpr?si=b8cf9a70b62048b7",
    icon: "spotify"
  },
   {
    name: "VSCO",
    url: "https://vsco.co/eduardomv2/gallery",
    icon: "camera"
  }
];
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <Header activeNav="about" />
  
  <main id="main-content" class="mx-auto w-full max-w-app px-4 pb-12">
    
    <section class="mb-12 mt-8 flex flex-col items-center gap-6">
        <div class="w-full">
            <Image 
            src={headerImg} 
            alt="Banner" 
            class="h-auto w-full object-cover opacity-90 grayscale transition-all duration-500 hover:grayscale-0"
            loading="eager"
            />
        </div>
        
        <div class="text-center max-w-lg">
            <h1 class="text-3xl font-bold text-accent">{frontmatter.title}</h1>
            <p class="mt-3 font-mono text-base text-foreground/80">
            {frontmatter.description}
            </p>
        </div>
    </section>

    <section class="mx-auto flex max-w-2xl flex-col gap-5">
      {mainLinks.map((link) => (
        <a
          href={link.url}
          target={link.url.startsWith("http") ? "_blank" : "_self"} 
          rel="noopener noreferrer"
          class="group relative flex items-center gap-5 border-2 border-accent bg-background px-5 py-4 shadow-[4px_4px_0px_var(--color-accent)] transition-all duration-200 hover:translate-x-[4px] hover:translate-y-[4px] hover:shadow-none focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent"
        >
          {/* ICONOS PRINCIPALES */}
          <div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-sm bg-accent text-background transition-colors">
            {link.icon === "blog" && <img src="/favicon.svg" alt="Logo" class="h-7 w-7 object-contain invert dark:invert-0" />}
            {link.icon === "github" && <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>}
            {link.icon === "youtube" && <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2.5 17a24.12 24.12 0 0 1 0-10 2 2 0 0 1 1.4-1.4 49.56 49.56 0 0 1 16.2 0A2 2 0 0 1 21.5 7a24.12 24.12 0 0 1 0 10 2 2 0 0 1-1.4 1.4 49.55 49.55 0 0 1-16.2 0A2 2 0 0 1 2.5 17"></path><path d="m10 15 5-3-5-3z"></path></svg>}
            {link.icon === "twitch" && <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 2H3v16h5v4l4-4h5l4-4V2zm-10 9V7m5 4V7"></path></svg>}
          </div>

          <div class="flex flex-col">
            <span class="text-xl font-bold text-accent">{link.name}</span>
            {link.subtitle && <span class="text-sm font-mono text-foreground/70">{link.subtitle}</span>}
          </div>

          <div class="absolute right-6 text-accent transition-transform duration-200 group-hover:translate-x-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
          </div>
        </a>
      ))}
    </section>

    <div class="my-10 flex items-center justify-center gap-4 opacity-50">
      <div class="h-px w-full bg-border"></div>
      <span class="text-sm font-mono text-foreground/50">Contacto & Social</span>
      <div class="h-px w-full bg-border"></div>
    </div>

    <section class="flex flex-wrap justify-center gap-6">
      {contactLinks.map((link) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          aria-label={link.name}
          class="group flex h-14 w-14 items-center justify-center rounded-sm border-2 border-transparent bg-muted text-foreground transition-all duration-300 hover:scale-110 hover:border-accent hover:bg-background hover:text-accent hover:shadow-[4px_4px_0px_var(--color-accent)]"
        >
          {/* ICONOS SECUNDARIOS */}
          {link.icon === "mail" && <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>}
          
          {link.icon === "linkedin" && <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>}
          
          {link.icon === "x" && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4l11.733 16h4.267l-11.733 -16z"/><path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"/></svg>}
          
          {link.icon === "instagram" && <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line></svg>}
          
          {link.icon === "spotify" && <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><path d="M8 11.2a6 6 0 0 1 8.5 0"></path><path d="M9.5 13.5a3.5 3.5 0 0 1 5 0"></path><path d="M11 15.8a1.5 1.5 0 0 1 2.5 0"></path></svg>}
          
          {link.icon === "camera" && <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.5 4h-5L7 7H4a2 2 0 0 0-2 2v9a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-3l-2.5-3z"></path><circle cx="12" cy="13" r="3"></circle></svg>}
        </a>
      ))}
    </section>

  </main>
  <Footer />
</Layout>